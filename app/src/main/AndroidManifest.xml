<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.elizabethkirschner.downtownworcester">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Events"
            android:label="Events">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Discover"
            android:label="Discover" />
        <activity
            android:name=".News"
            android:label="@string/title_activity_news" />
        <activity
            android:name=".Transportation"
            android:label="@string/title_activity_transportation" />
        <activity
            android:name=".TransportationSearch"
            android:label="@string/title_activity_transportation_search" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" />
        <activity android:name=".AccountActivity" />
        <activity android:name=".CreateEvent"></activity>
    </application>

</manifest>